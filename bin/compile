#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Fail fast
set -e

# Debug
# set -x

BUILD_DIR=$1
CACHE_DIR=$2
VENDOR_DIR="$BUILD_DIR/vendor"
EXPORT_PATH="$PWD/export"
PROFILE_PATH="$BUILD_DIR/.profile.d/p7zip.sh"

mkdir -p $(dirname $PROFILE_PATH)
mkdir -p $VENDOR_DIR

function set-default-env (){
  echo "export $1=\$$1:/app/vendor/$2" >> $PROFILE_PATH
  echo "export $1=\$$1:/app/vendor/$2" >> $EXPORT_PATH
}

echo "-----> Fetching and vendoring p7zip"
curl "https://s3.amazonaws.com/opendoor-deps/p7zip_9.20.1.tar.gz" -s -o - | tar xzf - -C "$VENDOR_DIR"
mv "$VENDOR_DIR/p7zip_9.20.1" "$VENDOR_DIR/p7zip"
# FYI we do this and set the export path explicitly because we cannot assume all buildpacks copy this dir over
# We need to also leave the vendor dir repo in place, as the current app vendor gets blown away and replaced with
# what is in the build dir
cp -R "$VENDOR_DIR/p7zip" "/app/vendor/p7zip"

set-default-env PATH "p7zip/bin"
